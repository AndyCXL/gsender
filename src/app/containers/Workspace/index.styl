@import '../variables';

.disabled {
    opacity: .5;
    cursor: no-drop;
    color: #999;
    pointer-events: none;
}

.workspace {
    height: 92vh;
    overflow-y: overlay;
    display: flex;
    flex-direction: row;

    &::-webkit-scrollbar {
        display: none;
    }

    .dropzone-overlay {
        position: fixed;
        top: $navbar-height;
        bottom: 0;
        left: $sidebar-width;
        right: 0;
        z-index: 100;
        background-color: rgba(255, 255, 255, .5);
        border: 4px dashed #286090;
        text-align: center;
        pointer-events: none;

        &.hidden {
            display: none;
        }

        .text-block {
            position: absolute;
            top: 25%;
            left: 50%;
            transform: translate(-50%, -50%);
            color: #666;
            font-size: 32px;
        }
    }

    .dropzone {
        height: 80vh;
    }

    .workspace-table {
        display: flex;
        flex-direction: column;
        flex-grow: 1;
        width: 100%;
        background-color: #d1d5db;
    }

    .workspace-table-row {
        display: flex;
        flex-direction: row;
    }

    .primary-container, .secondary-container, .primary-toggler, .secondary-toggler, .default-container {
        display: flex;
        flex-direction: column;
        position: relative;
    }

    .primary-container {
        // border-right: 1px solid #ccc;
    }

    .secondary-container {
        border-left: 1px solid #ccc;
    }

    .primary-container, .secondary-container {
        vertical-align: top;
        background-color: #d1d5db;
        width: 33%;
        min-width: 360px;
        padding: 0 10px;

        &.hidden {
            display: none;
        }
        @media (min-width: 1921px) {
            width: 634px;
        }
    }

.reverse-workspace {
    flex-direction: row-reverse;
}
    .primary-toggler {
        border-right: 1px solid #ccc;
    }

    .secondary-toggler {
        border-left: 1px solid #ccc;
    }

    .default-container {
        display: flex;
        flex-direction: column;
        flex-grow: 1;
        justify-content space-between;
        min-width: 360px;
        background-color: #d1d5db;
        width: 66%;
        @media (min-width: 1921px) {
            width: calc(100vw - 630px) !important;
        }
    }
}

