.widgets {
    display: flex;
    flex-direction: column;
    justify-content space-between;
    flex-grow: 1;
    min-height: 240px; // Keep a minimum space for dropping widgets
    // margin-top: 1vh;
    :global {
        // Class name for the chosen item
        .sortable-chosen {
            opacity: .8;
        }

        // Class name for the drop placeholder
        .sortable-ghost {
            opacity: .4;
        }
    }
}

.default-widgets {
    margin: 0 10px;
    display: flex;
    flex-grow: 1;
    flex-direction column;
    justify-content: space-between;
    width: 100%;
}

.default-widget-wrapper {
    display: flex;
    margin: 0 20px;
    flex-grow: 1;
    flex-direction column;
}
