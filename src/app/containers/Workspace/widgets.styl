.widgets {
    min-height: 240px; // Keep a minimum space for dropping widgets
    :global {
        // Class name for the chosen item
        .sortable-chosen {
            opacity: .8;
        }

        // Class name for the drop placeholder
        .sortable-ghost {
            opacity: .4;
        }
    }
}

.default-widgets {
    margin: 0 10px;
}

.default-widget-wrapper {
    margin: 10px;
    
    &:first-child {
        position: relative;
    }

    &:last-child {
        display: flex;
        align-items: center;
    }
}
