.widgets {
    display: flex;
    flex-direction: column;
    flex-grow: 1;
    min-height: 240px; // Keep a minimum space for dropping widgets
    // margin-top: 1vh;
    :global {
        // Class name for the chosen item
        .sortable-chosen {
            opacity: .8;
        }

        // Class name for the drop placeholder
        .sortable-ghost {
            opacity: .4;
        }
    }
}

.default-widgets {
    margin: 0 10px;
    padding: 0 0;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
    flex-shrink: 1;
    justify-content space-between;
    min-width: 360px;
    background-color: #d1d5db;
    width: 66%;
    @media (min-width: 1921px) {
        width: calc(100vw - 630px) !important;
    }

}

.default-widget-wrapper {
    display: flex;
    margin: 0 20px;
    flex-grow: 1;
    flex-direction column;
    justify-content: space-between;
}

.flex-grow {
    display: flex;
    flex-grow: 1;
    flex-direction column;
    align-items stretch;
}

.visualizer-container {
    flex-shrink: 1;
}

.job-status-container {
    flex-shrink: 1;
}
