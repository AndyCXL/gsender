.widgets {
    display: flex;
    flex-direction: column;
    flex-grow: 1;
    min-height: 240px; // Keep a minimum space for dropping widgets
    // margin-top: 1vh;
    :global {
        // Class name for the chosen item
        .sortable-chosen {
            opacity: .8;
        }

        // Class name for the drop placeholder
        .sortable-ghost {
            opacity: .4;
        }
    }
}

.default-widgets {
    margin: 0 10px;
    display: flex;
    flex-grow: 1;
    flex-direction column;
    align-items: stretch;
    width: 100%;
    box-sizing border-box;
    justify-content: space-between;
}

.default-widget-wrapper {
    display: flex;
    margin: 0 20px;
    flex-grow: 1;
    flex-direction column;
    justify-content: space-between;
}

.flex-grow {
    display: flex;
    flex-grow: 1;
    flex-direction column;
    align-items stretch;
}

.visualizer-container {
    max-height: 80%;
    overflow: hidden;
}

.job-status-container {
    height: 15%;
}
