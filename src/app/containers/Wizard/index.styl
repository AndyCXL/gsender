.wizardContainer {
  width: 1000px;
  height: 100%;
  display: flex;
  flex-grow: 1;
  border: solid 1px #aab0ba;
}

.containerFluid {
  padding-right: 15px;
  margin-top: 25px;
  padding-left: 15px;
  margin-right: auto;
  margin-left: auto;
}

.modalScroll {
  overflow-y: auto;
  height: 617px;
}

.singleToggle {
  margin-left: 10vw;
}

.numberValues {
  margin-left: 1vw;
}

.descriptionRow {
  display: -webkit-flex;
  font-size: medium;
  width: 100%;
  margin-top: 8%;
  padding-left: 15px;
  padding-right: 15px;
  border-bottom: 2px solid #a2abd6;
}

.keyRow {
  width: 50px;
  font-family: Georgia, serif;
  font-size: 21px;
}

.itemText {
  font-weight: bold;
  width: 35%;
  font-size: large;
  text-align: center;
}

.wizardContent {
  display: flex;
  flex-direction: row;
  flex-grow: 1;
}

.wizardMenu {
  width: 30%;
  display: flex;
  flex-direction: column;
  flex-grow: 1;
  background: #1F2937;

  h3 {
    color: #3e85c7;
    padding-left: 10px;
  }

  button + button {
    border-top: solid 1px #6B7280;
  }

  button {
    border: none;
    width: 100%;
    margin: 0;
    background: none;
    color: white;
    text-align: left;
    padding: 10px 0 10px 10px;

    &:focus {
      outline: none;
    }

    &:hover {
      background: #374151;
    }

    &:last-child {
      border-bottom: solid 1px #6B7280;
    }
  }
}

.activeMenu button {
  background: #374151 !important;
}

.wizardOptions {
  width: 85%;
  background: #d1d5db;
  padding: 10px;
  overflow-y: auto;
  height: 617px;
}

.hidden {
  display: none;
}

.visible {
  display: block;
}

.tool-main {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;

  h4 {
    color: #3e85c7;
    font-size: 1.4rem;
  }
}

.tool-listings {
  display: flex;
  flex-direction: column;
  width: 40%;
}

.add-tool-form {
  display: flex;
  flex-direction: column;
  width: 50%;
}

.tools {
  width: 100%;
  border-radius: .5rem;
  background: white;

  .delete {
    color: red;
    justify-content: center;
    align-items: center;
    border: none;
    outline: none;
    background: none;
  }
}

.tool {
  padding: 10px;
  display: flex;
  flex-direction: row;
  font-size: 1rem;
  align-items: center;
  justify-content: space-between;
  width: 100%;
}

.tool-dimensions {
  width: 30%;
}

.tool + .tool {
  border-top: solid 1px #cccccc;
}

.add-tool {
  width: 100%;
  background: #3e85c7;
  color: #FFFFFF;
  outline: none;
  border: none;
  padding: .5rem;
  border-radius: .25rem;

  &:disabled {
    background: #6B7280;
  }
}

.input-spread {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-bottom: 10px;
  align-items: center;
}

.probe-info {
  width: 60%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.modal-main {
  position: fixed;
  background: #D9DCE1;
  width: 50%;
  height: 85%;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.wizardModalFooter {
  margin-top: 166%;
  width: 100%;
  min-height: 56px;
  margin-top: 0;
  text-align: right;
  background-color: #eee;
  padding: 0;
  position: fixed;
  bottom: 0;
}

