.preferencesContainer {
  width: 1000px;
  height: 700px;
  display: flex;
  flex-grow: 1;
  border: solid 1px #aab0ba;
}

.preferencesContent {
  display: flex;
  flex-direction row;
  flex-grow 1;
}

.preferencesMenu {
  width: 20%;
  display: flex;
  flex-direction: column;
  flex-grow: 1;
  background: #1F2937;

  h3 {
    color: #3e85c7;
    padding-left: 10px;
  }

  button + button {
    border-top: solid 1px #6B7280;
  }

  button {
    font-size: 1.25rem;
    border: none;
    width: 100%;
    margin: 0;
    background: none;
    color: white;
    text-align: left;
    padding: 20px 0 20px 10px;

    &:focus {
      outline: none;
    }

    &:hover{
      background: #374151;
    }

    &:last-child {
      border-bottom: solid 1px  #6B7280;
    }
  }
}

.activeMenu button {
  background: #374151 !important;
}

.general-area {
  display: flex;
  gap: 3rem; 
}

.preferencesOptions {
  width: 80%;
  background: #d1d5db;
  padding: 10px;
}

.hidden {
  display: none;
}

.visible {
  display: block;
}

.tool-main {
  display: flex;
  flex-direction: col;
  justify-content: space-between;
  width: 100%;
}

.tool-listings {
  display: flex;
  flex-direction: column;
  width: 40%;
}

.add-tool-form {
  display: flex;
  flex-direction column;
  width: 50%;
}

.tools {
  width: 100%;
  border-radius: 0.5rem;
  background: white;

  .delete {
    color: red;
    justify-content center
    align-items center;
    border: none;
    outline: none;
    background: none;
  }
}

.tool {
  padding: 10px;
  display: flex;
  flex-direction: row;
  font-size: 1rem;
  align-items center;
  justify-content space-between
  width: 100%;
}

.tool-dimensions {
  width: 30%;
}

.tool + .tool {
  border-top: solid 1px #cccccc;
}

.add-tool {
  width: 100%;
  background: #3e85c7;
  color: #FFFFFF;
  outline: none;
  border: none;
  padding: 0.5rem;
  border-radius: 0.25rem;

  &:disabled {
    background: #6B7280;
  }
}

.jog-speed-active {
  font-size: 18px;
  width: 100%;
  background: #3e85c7;
  color: #FFFFFF;
  outline: none;
  border: none;
  padding: 10px;
  border-radius: 0.25rem;
  margin: 0;
}

.jog-speed-inactive {
  font-size: 18px;
  width: 100%;
  background: #6B7280;
  color: #FFFFFF;
  outline: none;
  border: none;
  padding: 10px;
  border-radius: 0.25rem;
  margin: 0;
}

.input-spread {
  display: flex;
  flex-direction row;
  justify-content space-between;
  margin-bottom: 10px;
  align-items center;
}

.probe-info {
  width: 60%;
  display: flex;
  flex-direction: column;
  justify-content space-between;
}

.keybindings-message {
  color: white;
  background-color: #3e85c7;
  font-size: 1.25rem;
  padding: 1rem;
  margin-top: 1.5rem;
}

.table-wrapper {
  height: 600px;
  overflow-y: scroll;
}

.settings-title { 
  font-size: 2rem;
  margin: 10px 0 2rem 0;
}

.settings-subtitle {
    // color: #3e85c7;
    font-size: 1.25rem;
    margin: 0 0 10px 0;
    text-decoration: underline
}

.settings-wrapper {
  width: 95%;
  margin: auto;
}

.machine-options-inputgroup {
    display: flex;
    gap: 2rem;
    align-items: center;
    margin-bottom: 2rem;
    justify-content: space-between;
    width: 100%;

    label {
        font-size: 1.4rem;
    }
}

.machine-options-section {
    margin: auto;
    display: flex;
    justify-content: space-between;
    flex-direction: column;
}

.machine-options-select {
    width: 100%;
    font-size: 14px;
}

.machine-features-section {
  display: flex;
  gap: 1rem;
  justify-content: space-between;
  flex-direction: row;
}

.cutting-area {
    font-size: 1.4rem;
    width: 100%;

    tr {
        height: 30px;
    }

    .label, .value {
        width: 150px;
    }

    .value {
        text-align: right;
    }
}

.probe-settings-group {
  margin: 1rem 0;
}

.jog-speed-wrapper {
  display: flex;
  gap: 1rem;
  margin-bottom: 2rem;
}

.flex-row {
  flex-direction: row;
}

.flex-column {
  flex-direction: column;
}

.fieldset {
  border: 2px solid black;
  padding: 10px;
  margin: 1rem 0;
}

.fieldset-legend {
  font-size: 1.5rem;
  color: #3e85c7;
  margin: 0;
  width: unset;
  border-bottom: 0;
}

.general-area-item {
  margin-bottom: 2rem;
}