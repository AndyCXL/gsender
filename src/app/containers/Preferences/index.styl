.preferencesContainer {
  width: 1000px;
  height: 700px;
  display: flex;
  flex-grow: 1;
  border: solid 1px #aab0ba;
}

.preferencesContent {
  display: flex;
  flex-direction row;
  flex-grow 1;
}

.preferencesMenu {
  width: 30%;
  display: flex;
  flex-direction: column;
  flex-grow: 1;
  background: #1F2937;

  h3 {
    color: #3e85c7;
    padding-left: 10px;
  }

  button + button {
    border-top: solid 1px #6B7280;
  }

  button {
    border: none;
    width: 100%;
    margin: 0;
    background: none;
    color: white;
    text-align: left;
    padding: 10px 0 10px 10px;

    &:focus {
      outline: none;
    }

    &:hover{
      background: #374151;
    }

    &:last-child {
      border-bottom: solid 1px  #6B7280;
    }
  }
}

.activeMenu {
  background: #374151 !important;
}


.preferencesOptions {
  width: 70%;
  background: #d1d5db;
  padding: 10px;
}

.hidden {
  display: none;
}

.visible {
  display: block;
}

