@import "widget";
@import "primary-toolbar";

.visualizer-component {
    border: solid 1px #9CA3AF;
}

.visualizer-wrapper {
    position: relative;
}

.visualizer-container{
    height: 100%;
}

.no-margin {
    margin-bottom: 0 !important;
}

.flex-grow {
    display: flex;
    width: 100%;
    height: 100%;
    flex-grow: 1;
    flex-direction column;
    box-sizing border-box;
}

.vizWidgetOverride {
    height: calc(100% - 8rem) !important;
    margin: 0 !important;
    padding-bottom: 10px;
}
