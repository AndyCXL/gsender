@import "widget";
@import "primary-toolbar";

.visualizer-component {
    margin: 10px;
    display: flex;
    flex-direction column;
    flex-grow 1;
}

.visualizer-wrapper {
    display: flex;
    flex-direction column;
    flex-grow: 1;
    position: relative;
}

.visualizer-container{
    display: flex;
    flex-direction column;
    flex-grow: 1;
}

.no-margin {
    margin-bottom: 0 !important;
}

.flex-grow {
    display: flex;
    width: 100%;
    height: 100%;
    flex-grow: 1;
    flex-direction column;
    box-sizing border-box;
}
