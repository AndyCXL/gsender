.input-wrapper {
  display flex;
  flex-direction: row;
  width: 90%;


.jog-widget {
  button + button {
    margin-left: 0;
  }
}

  input {
    text-align center;
    font-size: 16px;
    width: 75%;
    margin: 0;
    padding: 0;
    font-size: clamp(12px, 1vw, 22px);
    height: clamp(24px, 2vw, 38px);
    &:focus {
      outline: none;
    }

  }
}

.control-wrapper {
  display flex;
  flex-direction column;
  flex-wrap wrap;
  span {
    font-weight: bold;
  }
  button + button {
    margin-left: 0;
  }
}

.step-button  {
    height: clamp(12px, 1vw, 20px);
    border-radius: 4px;
    border: 1px solid #d8d8d8;
    position: relative;
    text-align: center;
    font-size: 10px;
    outline: none;
    background-size: contain;
    background-repeat: no-repeat;
    caret-color: transparent;
}
