@import 'display-panel';
@import 'rotate';
@import 'keypad';

.disabled {
    opacity: .5;
    cursor: no-drop;
}

.widget-content {
    position: relative;
    padding: 10px;

    &.hidden {
        display: none;
    }
}

.row-space {
    margin-bottom: 5px;

    &:last-child {
        margin-bottom: 0;
    }
}

.col-space {
    margin-right: 5px;
}

.jog-widget {
    button + button {
        margin: none;
    }
}

.movementRateButton {
    border: solid 1px #9CA3AF;
    background-color: #D1D5DB;
    padding: 5px;
    font-size: 14px;
    display: flex;
    flex-grow: 1;
    width: 90%;
    border-radius: .25rem;
    justify-content: center;
    color: #3e85c7;
    --tw-shadow: 0 4px 6px -1px rgba(0, 0, 0, .1), 0 2px 4px -1px rgba(0, 0, 0, .06);
    box-shadow: var(--tw-ring-offset-shadow, 0 0 #0000), var(--tw-ring-shadow, 0 0 #0000), var(--tw-shadow);
    margin-bottom: clamp(12px, 1vw, 2rem);
    transition: 200ms ease-in-out;

    &:hover {
        border: 1px solid #3E85C7;
        -webkit-transition: 200ms ease-in-out;
        transition: 200ms ease-in-out;
        background-color: #E5E7EB;
    }

    &:disabled {
        cursor: no-drop;
    }
}

.flex-col {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-items: center;
    flex-grow: 1;
    height: 100%;
    width: 100%;

    button + button {
        margin-left: 0;
    }
}

.speed-controls {
    display: flex;
    width: 100%;
    flex-grow: 1;
    flex-direction: row;
    justify-content: space-between;
    padding: clamp(5px, 0.55vw, 1rem);
    box-sizing: border-box;
    align-items: center;
}

.btn-Keypad {
    height: clamp(30px, 3vw, 60px);
    border: none;
    outline: none;
    background: #3e85c7;
    color: white;
    width: 100%;
    display: flex;
    flex-grow: 1;
    align-items: center;
    justify-content: center;
    font-size: 1.2rem;
    --tw-shadow: 0 4px 6px -1px rgba(0, 0, 0, .1), 0 2px 4px -1px rgba(0, 0, 0, .06);
    box-shadow: var(--tw-ring-offset-shadow, 0 0 #0000), var(--tw-ring-shadow, 0 0 #0000), var(--tw-shadow);

    &:disabled {
        background: #9CA3AF;
        cursor: no-drop;
    }
}

.control-group {
    width: 30%;
    display: flex;
    flex-direction: column;
}

.btn-up {
    clip-path: polygon(0 25%, 50% 0, 100% 25%, 100% 100%, 50% 75%, 0 100%);
}

.btn-right {
    clip-path: polygon(75% 0, 100% 50%, 75% 100%, 0 100%, 25% 50%, 0 0);
}

.btn-down {
    clip-path: polygon(0 75%, 50% 100%, 100% 75%, 100% 0, 50% 25%, 0 0);
}

.btn-left {
    clip-path: polygon(100% 0, 75% 50%, 100% 100%, 25% 100%, 0 50%, 25% 0);
}

.btn-up-left{
    clip-path: polygon(0 0, 0 75%, 75% 0);
}
.btn-up-right{
    clip-path: polygon(100% 75%, 25% 0, 100% 0);
}
.btn-down-left{
    background-size: cover;
    clip: path('M0.868,0.007 L0.056,0.382 c-0.094,0.044,-0.062,0.181,0.037,0.181 h0.344 v0.344 c0,0.1,0.137,0.131,0.181,0.037 l0.375,-0.812 c0.031,-0.075,-0.05,-0.156,-0.125,-0.125');
}
.btn-down-right{
    clip-path: polygon(25% 100%, 100% 25%, 100% 100%);
}

.hidden {
    display: none;
}

.keys-body{
    display: flex;
    flex-direction: row;
    width: 100%;
    justify-content: space-around
}

.xy-keys{
    width: 50%;
    height: max-content;
    display: grid;
    grid-gap: 10px;
    grid-template-columns: repeat(4, minmax(0, 1fr));
}

.xy-keys > div::before, .xy-keys > button::before {
    content: '';
    width: 0;
    padding-bottom: 100%;
    display: block;
}

.zKeys{
    width: 13.4%;
    display: grid;
    grid-gap: 10px;
    grid-template-columns: repeat(1, minmax(0, 1fr));
}

.preset-controls{
    width: 25%;
    margin-left: 5%;

    button {
        margin-bottom: 20px;
    }

    button + button {
        margin-left: 0;
    }
}

.jog-cancel-button {
    color: #dc2626;
    border: none;
    outline: none;
    font-size: 2rem;
    display: flex;
    align-items center;
    justify-content center;
    background: none;
    border-radius: 9999px;
    background: #cccccc;

    &:disabled {
        cursor: no-drop;
        color: #9ca3af
    }
}
