.NavbarConnection {
  display: flex;
  flex-direction: row;
  position: relative;
  border: solid 1px #374151;
  background: #111827;
  color: white;
  border-radius: 0.25rem;
  justify-content space-between;
  align-items center;
  padding: 0.25rem 1rem;
}

.NavbarConnectionIcon {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #4B5563;
  height: 2.5rem;
  width: 2.5rem;
  border-radius: 9999px;
}
