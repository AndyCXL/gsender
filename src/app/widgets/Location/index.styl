@import "display-panel";
@import "rotate";
@import "keypad";
@import "LocationPanel";

.widget-content {
    position: relative;
    padding: 10px;

    &.hidden {
        display: none;
    }
}

.row-space {
    margin-bottom: 5px;

    &:last-child {
        margin-bottom: 0;
    }
}
.col-space {
    margin-right: 5px;
}

.position-label {
    display: inline;
    border: 1px solid #9CA3AF;
    padding: 4px;
    margin-left: 5px;

    &:hover {
        background-color: rgba(0, 0, 0, .05);
    }
}
