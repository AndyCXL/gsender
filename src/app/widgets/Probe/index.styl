.widget-content {
    position: relative;
    padding: 10px;

    &.hidden {
        display: none;
    }
}

.probe-command-description {
    height: 30px;
}

.probe-axis-description {
    height: 15px;
}

.probe-options-row {
    .probe-options-col:nth-child(odd) {
        padding-right: 5px;
    }
    .probe-options-col:nth-child(even) {
        padding-left: 5px;
    }
}
.probe-flex {
    display: flex;
    flex-direction: row;
}
.probe-options-col {
    width: 60%;
}
.probe-settings-col {
    width: 40%;
    padding: 0 20px;
    display: flex;
    flex-direction: column
}

.row-spread {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.probeStatus {
    width: 100%;
    display flex;
    flex-direction column;
    justify-content center;
    align-items center;
    h5 {
        text-align center;
        font-weight: bold;
    }
    span {
        margin-top: 10px;
    }
}
.probeIndicator {
    width: 30px;
    height: 30px;
    border-radius: 9999px;
    background: #000;
}

.circuit-open {
    background: #DC2626
}

.circuit-closed {
    background: #059669;
}

.btn-primary {
    border: solid 1px #9CA3AF;
    background: rgba(209, 213, 219, 0.6);
    padding: 0.25rem;
    display: flex;
    flex-grow: 1;
    width: 100%;
    border-radius: 0.25rem;
    justify-content center;
    color: #3e85c7;
    --tw-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    box-shadow: var(--tw-ring-offset-shadow, 0 0 #0000), var(--tw-ring-shadow, 0 0 #0000), var(--tw-shadow);
    margin-bottom: 20px;
    &:disabled {
        color: #6F7376;
        cursor: no-drop;
    }
}

.btn-cancel {
    background: #DC2626;
    color: #FFF;
}

.modalHeader {
    background: #1f2937;
    color: #3e85c7;
}

.run-probe-body {
    width: 600px;
    min-height: 200px;
    display: flex;
    flex-direction: row;
}

.left {
    width: 60%;
    display flex
    flex-direction column
    justify-content space-between;
}
.right {
    width: 40%;
    display flex
    flex-direction column
}

.probe-timer {
    width: 100%;
    text-align center;
}

.img-hidden {
    display: none;
}
