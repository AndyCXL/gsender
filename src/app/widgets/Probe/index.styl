.widget-content {
    position: relative;
    padding: 10px;

    &.hidden {
        display: none;
    }
}

.probe-command-description {
    height: 30px;
}

.probe-axis-description {
    height: 15px;
}

.probe-options-row {
    .probe-options-col:nth-child(odd) {
        padding-right: 5px;
    }
    .probe-options-col:nth-child(even) {
        padding-left: 5px;
    }
}
.probe-flex {
    display: flex;
    flex-direction: row;
}
.probe-options-col {
    width: 60%;
}
.probe-settings-col {
    width: 40%;
    padding: 0 20px;
    display: flex;
    flex-direction: column
}

.row-spread {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.probeStatus {
    width: 100%;
    display flex;
    flex-direction column;
    justify-content center;
    align-items center;
    h5 {
        text-align center;
        font-weight: bold;
    }
    span {
        margin-top: 10px;
    }
}
.probeIndicator {
    width: 30px;
    height: 30px;
    border-radius: 9999px;
    background: #000;
}

.circuit-open {
    background: #DC2626
}

.circuit-closed {
    background: #059669;
}
